#
# This file demonstrates how to override the default user_files location
# with your own organization-specific files.
#
# USAGE:
# 1. Copy this file to docker-compose.override.yml:
#    cp docker-compose.override.yml.example docker-compose.override.yml
#
# 2. Customize the paths to point to your organization's files
#
# 3. Docker Compose will automatically merge this with docker-compose.yml
#
# IMPORTANT:
# - docker-compose.override.yml is in .gitignore (organization-specific)
# - The default user_files/ in apps/itsm/user_files/ works out of the box
# - Only create this override if you want to manage files separately

services:
  itsm:
    volumes:
      # Mount your custom static files (logos, CSS, JS, images, fonts)
      # These will override the default /app/user_files/static/ directory
      # Note: Logos should be placed in a 'logos/' subdirectory within your static path
      - /path/to/your/static:/app/user_files/static:ro
      
      # Mount your custom LaTeX templates (optional)
      # These will override the default /app/user_files/latex_templates/ directory
      # - /path/to/your/latex_templates:/app/user_files/latex_templates:ro

# Example with actual paths (commented out):
# services:
#   itsm:
#     volumes:
#       - /opt/organization/itsm/static:/app/user_files/static:ro
#       - /opt/organization/itsm/latex_templates:/app/user_files/latex_templates:ro
#
# Your static directory structure should be:
# /opt/organization/itsm/static/
#   ├── logos/
#   │   └── logo.png
#   ├── css/
#   │   └── custom.css
#   └── images/
#       └── banner.jpg
